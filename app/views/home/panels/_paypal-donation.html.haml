-#.panel.paypal-donation
-#.panel-body#paypal-ad
.align-text-top.m-auto
  .spacer-20
  .d-block.align-items-center.rounded.ui-widget-shadow.paypal-container.wide-panel.panel.ad-panel.w-100
    .panel-heading
      %h1.panel-title Support Makeabox.io!

    .ad-component
      .buttons.w-100.d-flex.align-content-center.align-center.align-items-center
        .paypal-logos.d-flex.align-content-center.w-100.text-center
          %form{action: 'https://www.paypal.com/cgi-bin/webscr', method: 'post', target: '_blank',
            class: 'd-flex w-100 align-items-center'}
            %input{name: 'cmd', type: 'hidden', value: '_s-xclick'}
            %input{name: 'hosted_button_id', type: 'hidden', value: 'Y4XR246KD644W'}
            %input{alt: 'paypal-donation',
              border: '0',
              name: 'submit',
              width: 300,
              height: 50,
              class: 'paypal-button',
              style: 'width: 239px; height: 77px',
              src: asset_image('buttons/up-short/donate.png'),
              title: 'PayPal - The safer, easier way to pay online!', type: 'image'}
            %img{:alt => '', :border => '0', :height => '1', :src => 'https://www.paypal.com/en_US/i/scr/pixel.gif', :width => '1'}
            %img{:alt => '', :border => '0', :height => '1', :src => 'https://www.paypalobjects.com/webstatic/mktg/merchant_portal/button/donate.en.png', :width => '1'}
