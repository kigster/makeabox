#!/usr/bin/env bash
# vim: ft=bash

unset DEBUG

PATH_add bin
PATH_add exe
PATH_add ~/.bashmatic/bin

export APP_KEY_FILE="$(pwd -P)/.key"
export RUBYOPT="-W0"

[[ -f "${APP_KEY_FILE}" ]] && export SYM_ARGS="-ck $(head -1 "${APP_KEY_FILE}")"

[[ -f ".envrc.local" ]] && source ".envrc.local"
[[ -n "${RAILS_ENV}" && -f ".envrc.$RAILS_ENV" ]] && source ".envrc.${RAILS_ENV}"

